<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_bg_green"
    tools:context="com.greenflames.myzebeel.ui.activity.ProductDetailActivity">


    <!-- Product title layout -->

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/product_page_title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:tag="sticky-on_click_go_back" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_action_left"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/cart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_action_cart"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!-- Product title layout -->

    <!--product details scroller-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:paddingBottom="170dp"
        android:weightSum="2">

        <!-- Product Image slider layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/product_page_image_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:gravity="top"
                android:layout_marginTop="0dp" >


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|top">

                </androidx.viewpager.widget.ViewPager>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/SliderDots"
                android:layout_below="@+id/viewPager"
                android:orientation="horizontal"
                android:gravity="center_horizontal|bottom"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"/>

            </LinearLayout>

        <!-- Product Image slider layout -->

        <!--product details-->




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/product_detail_box_background"
            android:layout_weight="1">



            <!-- Product price and ratings layout -->

            <LinearLayout
                android:id="@+id/product_page_price_ratings_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_page_image_layout"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_prod_dis_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avocado - Medium"
                            android:textColor="@color/black"
                            android:textSize="24dp"
                            android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Availbility : "
                            android:textColor="@color/txt_highlight"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Stock"
                            android:textColor="@color/grey"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sku : "
                            android:textColor="@color/txt_highlight"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CUC-KW-2"
                            android:textColor="@color/grey"
                            android:textSize="14sp" />
                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>



            <!-- Product reviews summary layout -->

            <LinearLayout
                android:id="@+id/product_page_reviews_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_page_emi_cod_return_layout"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:tag="open_review_page" >



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Avocados Are a Herat-Healthy, Nutrient-Dense Superfood"
                        android:textColor="@color/grey"
                        android:textStyle="bold"
                        android:textSize="12sp" />


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Nutrient-dense foods are those that provide substantial amount of vitamins, minerals, and other nutrients"
                        android:id="@+id/pro_desc"
                        android:textColor="@color/grey"
                        android:justificationMode="inter_word"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:orientation="vertical"
                android:background="@color/white"
                tools:ignore="MissingConstraints">

                <!--price layout-->

                <LinearLayout
                    android:id="@+id/price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    tools:ignore="MissingConstraints">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_quantity"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal">


                        <TextView android:textSize="19.7sp"
                            android:textColor="@color/light_black"
                            android:id="@+id/decrement2"
                            android:paddingLeft="12dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="4dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"/>

                        <TextView android:textSize="16.3sp"
                            android:textColor="@color/light_black"
                            android:id="@+id/display_inc_dec2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="1"/>

                        <TextView android:textSize="19.7sp"
                            android:textColor="@color/light_black"
                            android:id="@+id/increment2"
                            android:paddingLeft="20dp"
                            android:paddingTop="2dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="+"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:gravity="right|center_vertical"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="KD 150"
                                android:textColor="@color/light_black"
                                android:textSize="24sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You save 20%"
                                android:textColor="@color/txt_highlight"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

                </LinearLayout>

        </LinearLayout>



        <!--product details-->


    <!--fixed buttons at bottom-->


<!--    <RelativeLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/product_purchase"-->
<!--        tools:layout_editor_absoluteX="0dp"-->
<!--        tools:layout_editor_absoluteY="0dp"-->
<!--        tools:ignore="MissingConstraints">-->

<!--       -->
<!--    </RelativeLayout>-->

    <!--price layout-->

    <!--button layout-->
<RelativeLayout
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="4"
            tools:ignore="MissingConstraints"
            android:layout_alignParentBottom="true">



                <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/box_green_broder_white_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/heart_cart" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/box_green_broder_white_background"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_graph" />

                </LinearLayout>

                 <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_green_broder_white_background"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_share" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/buy_now"
                    android:layout_margin="10dp"
                    android:background="@drawable/box_green_border_green_background"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/filter_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:src="@drawable/ic_action_cart_product_page" />

                    <TextView
                        android:id="@+id/filter_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="ADD TO CART"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="12sp" />


                </LinearLayout>

        </LinearLayout>

    <!--button layout-->


    </RelativeLayout>

    <!--fixed buttons at bottom-->

    <!--Error message activity-->

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/empty_product_detail"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/sad_face"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Sorry, This product is not available"/>

    </LinearLayout>

    <!--Error message activity-->

</androidx.constraintlayout.widget.ConstraintLayout>
