<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear_bottom"
        android:layout_marginTop="60dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/linerlayout_address_textviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstname_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="First Name"
                android:textColor="@color/light_black"
                android:textSize="15sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/firstname_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="First Name"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/lastname_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Last Name"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/lastname_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="Last Name"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/moble_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Street"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/mobile_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="Street"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/pincode_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Lane"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pincode_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="Lane"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/address_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Area"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/address_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="Area"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/locality_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Country"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/locality_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="Country"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/City_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="City"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/city_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="City"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/Zip_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Zip/post code"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/zip_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="zip/post code"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/state_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="State/province"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/state_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="State/province"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/company_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Company"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/company_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="Company"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/buldnum_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Building Number"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/bildnum_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="Building Number"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/floor_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Floor"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/floor_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="Floor"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/aptmntnum_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Apartment Number"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/aptmntnum_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="Apartment Number"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/bldnlane_textview"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:fontFamily="@font/helveticamedium"
                android:paddingTop="5dp"
                android:text="Building land mark"
                android:textColor="@color/light_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/bldlane_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/helveticalight"
                android:hint="Building lane mark"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cart Subtotal"
            android:textColor="@color/light_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90"
            android:textColor="@color/light_black"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29.3dp"
        android:layout_marginTop="13.7dp"
        android:layout_marginRight="31.7dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delivery"
            android:textColor="@color/black"
            android:textSize="13.3sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free"
            android:textColor="#c79900"
            android:textSize="13.3sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23.3dp"
        android:layout_marginTop="13.7dp"
        android:layout_marginRight="31.7dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/agree_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:buttonTint="@color/orange" />

        <TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the terms and conditions"
            android:textColor="@color/txt_highlight"
            android:textSize="13.3sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/delivery_time_arror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/check_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="16.7dp"
            android:paddingBottom="13dp"
            android:text="Check Out"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>