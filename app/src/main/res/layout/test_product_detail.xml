<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.greenflames.myzebeel.ui.activity.ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/default_white_page"
        android:orientation="vertical">
    </LinearLayout>

    <!--product details scroller-->

    <ScrollView
        android:id="@+id/product_page_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:visibility="visible"
        android:scrollbars="none" >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp" >

            <!-- Product title layout -->

            <LinearLayout
                android:id="@+id/product_page_title_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:tag="sticky-on_click_go_back" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="15dp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:orientation="vertical" >


                        <TextView
                            android:id="@+id/product_page_title_main_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:maxLines="2"
                            android:text="Avocado - Medium"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/product_page_title_sub_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Black"
                            android:textColor="@color/grey"
                            android:textStyle="bold"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/product_detail_wish_button"
                            android:layout_gravity="right"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_action_cart"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#FFDFDFDF" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:layout_below="@id/product_page_title_layout"
                android:orientation="vertical">

                <!-- Product Image slider layout -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/product_page_image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp" >


                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewPager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"/>

                        <LinearLayout
                            android:id="@+id/SliderDots"
                            android:layout_below="@+id/viewPager"
                            android:orientation="horizontal"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </LinearLayout>

                <!--product details-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Product price and ratings layout -->

                    <LinearLayout
                        android:id="@+id/product_page_price_ratings_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_page_image_layout"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="187"
                            android:orientation="vertical" >

                            <!--<TextView-->
                            <!--android:id="@+id/product_page_price_ratings_mrp_text"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:paddingTop="6dp"-->
                            <!--android:textColor="#565656"-->
                            <!--android:textSize="12dp" />-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/txt_prod_dis_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KD 2790"
                                    android:textColor="#000000"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/txt_pro_actual_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KD 2790"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/grey"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_pro_disc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="2dp"
                                android:text="Delivery Charges + Availability"
                                android:textColor="@color/txt_highlight"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:tag="check_for_delivery_details" />
                        </LinearLayout>

                        <!--<View-->
                        <!--android:layout_width="1dp"-->
                        <!--android:layout_height="fill_parent"-->
                        <!--android:layout_marginBottom="10dp"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:background="#EBEBEB" />-->


                    </LinearLayout>


                    <!-- Product emi/return/cod layout -->

                    <LinearLayout
                        android:id="@+id/product_page_emi_cod_return_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_below="@id/product_page_price_ratings_layout"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/product_page_return_view"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="116"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 DAY"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:text="Replacement Policy"
                                android:textColor="@android:color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:background="#FFDFDFDF" />

                        <LinearLayout
                            android:id="@+id/product_page_emi_view"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="109"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Online"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Payment Option"
                                android:textColor="@android:color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:background="#FFDFDFDF" />

                        <LinearLayout
                            android:id="@+id/product_page_cod_view"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="82"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CASH"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="On Delivery"
                                android:textColor="@android:color/black"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Product reviews summary layout -->

                    <LinearLayout
                        android:id="@+id/product_page_reviews_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_page_emi_cod_return_layout"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:tag="open_review_page" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="266"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="DETAILS"
                                    android:textColor="@android:color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <!--<TextView-->
                                <!--android:id="@+id/product_page_reviews_summary_text"-->
                                <!--android:layout_width="fill_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="(108 reviews and 303 Ratings)"-->
                                <!--android:textColor="@android:color/black"-->
                                <!--android:textSize="11sp" />-->
                            </LinearLayout>

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="30"
                                android:background="@android:color/transparent"
                                android:scaleType="center" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#FFDFDFDF" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical" >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quantity :"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Quantity"
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/pro_quantity"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Store :"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/shop_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KD 2790"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="DESCRIPTION"
                                android:id="@+id/pro_desc"
                                android:textColor="@android:color/black"
                                android:textSize="14dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="195"
                                android:orientation="vertical" >
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <!--product details-->

                </LinearLayout>


            </LinearLayout>


            <!--similar product layout-->
            <!--<LinearLayout-->
            <!--android:id="@+id/product_page_other_variants_layout"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/product_page_reviews_layout"-->
            <!--android:layout_marginLeft="6dp"-->
            <!--android:layout_marginRight="6dp"-->
