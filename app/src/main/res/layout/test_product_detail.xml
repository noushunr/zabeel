            <!--</LinearLayout>-->

            <!--&lt;!&ndash; Product similar products layout &ndash;&gt;-->

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/recyclerView"-->
            <!--android:layout_below="@+id/product_page_other_variants_layout"-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--app:stackFromEnd="true"-->
            <!--android:layout_marginTop="2dp"-->
            <!--android:layoutDirection="rtl"-->
            <!--android:layout_height="wrap_content" />-->

            <!--similar product layout-->


        </RelativeLayout>

    </ScrollView>

    <!--product details scroller-->


    <!--fixed buttons at bottom-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/product_purchase"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/product_page_spec_summary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:id="@+id/buttons" >

                <LinearLayout
                    android:id="@+id/center_point"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/darker_gray"
                    android:orientation="vertical">



                    <!--<View android:layout_width="1dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_height="40dp"/>-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:padding="7dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/dim_foreground_disabled_material_light"
                    android:id="@+id/add_to_cart"
                    android:layout_alignRight="@+id/center_point"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sort_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_cart" />

                    <TextView
                        android:id="@+id/sort_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:text="ADD TO CART"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:padding="7dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/buy_now"
                    android:background="@color/error_color_material"
                    android:layout_alignLeft="@+id/center_point"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/filter_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="BUY NOW"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/filter_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:src="@drawable/ic_action_basket" />

                </LinearLayout>



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/straight_line"
                    android:layerType="software" />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:padding="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/out_of_stock"
                android:visibility="gone"
                android:background="@drawable/stock_box"
                android:layout_alignLeft="@+id/center_point"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/filter_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="OUT OF STOCK"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

            </LinearLayout>





        </LinearLayout>


    </RelativeLayout>

    <!--fixed buttons at bottom-->

    <!--Error message activity-->

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/empty_product_detail"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/sad_face"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Sorry, This product is not available"/>

    </LinearLayout>

    <!--Error message activity-->

</androidx.constraintlayout.widget.ConstraintLayout>
