            <!--android:gravity="center_vertical|left"-->
            <!--android:text="SIMILAR PRODUCTS"-->
            <!--android:textColor="@android:color/black"-->
            <!--android:textSize="14dp"-->
            <!--android:textStyle="bold" />-->
