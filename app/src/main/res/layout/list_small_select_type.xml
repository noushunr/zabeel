<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/linearlayout_payment_back"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:padding="4dp"
        android:background="@drawable/linearlayout_payment_back"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_wishlist"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="end"
            card_view:srcCompat="@drawable/ic_favorite_border" />

        <ImageView
            android:id="@+id/imageView_cart_product"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:src="@drawable/place_holder"
             />

        <TextView
            android:id="@+id/product_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:fontFamily="@font/helveticamedium"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="Orange 1 KG\n America" />

        <TextView
            android:id="@+id/product_config_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/helveticalight"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone"
            tools:text="origin\nPacking\nType" />

        <TextView
            android:id="@+id/product_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:fontFamily="@font/helveticamedium"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="KD 25.00" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/box_quantity_square"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/decrement2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:paddingEnd="12dp"
                android:text="-"
                android:textColor="@color/light_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/display_inc_dec2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_gravity="center"
                android:textColor="@color/light_black"
                android:textSize="16sp"
                tools:text="1" />

            <TextView
                android:id="@+id/increment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingTop="2dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                android:text="+"
                android:textColor="@color/light_black"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

        <Button
            android:id="@+id/add_cart"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:drawableStart="@drawable/ic_cart"
            android:drawablePadding="@dimen/_5sdp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:text="Add to cart"
            android:padding="10dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textAllCaps="true"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>