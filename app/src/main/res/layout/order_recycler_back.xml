<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/linearlayout_payment_back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linearlayout_payment_back">

        <ImageView
            android:id="@+id/imageView_orders"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/proName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/helveticalight"
            android:text="000048176"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/proPrice_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/helveticalight"
            android:text="000048176"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/orderStatus_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/helveticalight"
            android:text="pending"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderDate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="80dp"
            android:text="2010-10-11"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/orderTime_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="80dp"
            android:text="05:47:30"
            android:textColor="@color/grey"
            android:textSize="14sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>